<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Status Bar -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/card_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <ImageView
            android:id="@+id/connectionIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_car"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/app_name" />
        
        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/disconnected"
            android:textColor="@color/text_secondary_dark"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/batteryVoltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--.- V"
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Main Data Grid -->
    <GridLayout
        android:id="@+id/dataGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Speed Card -->
        <LinearLayout
            android:id="@+id/speedCard"
            style="@style/DataCard"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed"
                style="@style/DataLabel" />
            
            <TextView
                android:id="@+id/speedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="8dp"
                style="@style/DataValue" />
            
            <TextView
                android:id="@+id/speedUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kmh"
                style="@style/DataUnit" />
        </LinearLayout>

        <!-- RPM Card -->
        <LinearLayout
            android:id="@+id/rpmCard"
            style="@style/DataCard"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rpm"
                style="@style/DataLabel" />
            
            <TextView
                android:id="@+id/rpmValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="8dp"
                style="@style/DataValue" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RPM"
                style="@style/DataUnit" />
        </LinearLayout>

        <!-- Coolant Temperature Card -->
        <LinearLayout
            android:id="@+id/coolantCard"
            style="@style/DataCard"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coolant_temp"
                style="@style/DataLabel" />
            
            <TextView
                android:id="@+id/coolantValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="8dp"
                style="@style/DataValue" />
            
            <TextView
                android:id="@+id/coolantUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celsius"
                style="@style/DataUnit" />
        </LinearLayout>

        <!-- Fuel Level Card -->
        <LinearLayout
            android:id="@+id/fuelCard"
            style="@style/DataCard"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fuel_level"
                style="@style/DataLabel" />
            
            <TextView
                android:id="@+id/fuelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="8dp"
                style="@style/DataValue" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent"
                style="@style/DataUnit" />
        </LinearLayout>

        <!-- Engine Load Card -->
        <LinearLayout
            android:id="@+id/loadCard"
            style="@style/DataCard"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/engine_load"
                style="@style/DataLabel" />
            
            <TextView
                android:id="@+id/loadValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="8dp"
                style="@style/DataValue" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent"
                style="@style/DataUnit" />
        </LinearLayout>

        <!-- Throttle Position Card -->
        <LinearLayout
            android:id="@+id/throttleCard"
            style="@style/DataCard"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/throttle_position"
                style="@style/DataLabel" />
            
            <TextView
                android:id="@+id/throttleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="8dp"
                style="@style/DataValue" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent"
                style="@style/DataUnit" />
        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
